@model CarDealer.Models.ViewModels.EditCmrVm

@{
    ViewBag.Title = "Edit Customer";
}

<h2>Edit</h2>
<h4>Customer</h4>

<hr />

<div class="form-horizontal">
    <form method="POST">
        <input type="number" name="Id" value="@Model.Id" hidden="hidden"/>
        <div class="form-group">
            <div class="col-md-10">
                <label for="name" class="control-label col-md-2">Name: </label>
                <input id="name" type="text" name="name" class="form-control" value="@Model.Name"/>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-10">
                <label for="birthDate" class="control-label col-md-2">DOB: </label>
                <input id="birthDate" type="date" name="birthDate" class="form-control" value="@Model.BirthDate.ToString("yyyy-MM-dd")"/>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Edit" class="btn btn-default"/>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
