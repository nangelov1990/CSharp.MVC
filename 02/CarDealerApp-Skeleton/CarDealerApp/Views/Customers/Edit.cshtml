@model CarDealer.Models.ViewModels.Customers.EditCmrVm

@{
    ViewBag.Title = "Edit Customer";
}

<h2>Edit</h2>
<h4>Customer</h4>

<hr />

<div class="form-horizontal">
    <form method="POST">
        <input type="number" name="Id" value="@Model.Id" hidden="hidden"/>
        <div class="form-group">
            <div class="col-md-10">
                <label for="name" class="control-label col-md-2">Name: </label>
                <input id="name" type="text" name="name" class="form-control" value="@Model.Name"/>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-10">
                @Html.LabelFor(vm => vm.BirthDate, new { @class = "control-label col-md-2" })
                @Html.EditorFor(vm => vm.BirthDate, new { htmlAttributes = new { @class = "form-control", type = "date" } })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Edit" class="btn btn-default"/>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
