@{
    ViewBag.Title = "Add Car";
}

<h2>Add</h2>

<h4>Car</h4>

<hr />

<div class="form-horizontal">
    <h4>Car</h4>
    <hr />
    <form method="POST">
        <div class="form-group">
            <div class="col-md-10">
                <label class="control-label col-md-2" for="make">Make</label>
                <input id="make" name="make" type="text" class="form-control" required="required" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-10">
                <label class="control-label col-md-2" for="model">Model</label>
                <input id="model" name="model" type="text" class="form-control" required="required" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-10">
                <label class="control-label col-md-2" for="travelledDistance">Travelled Distance</label>
                <input id="travelledDistance" name="travelledDistance" type="number" min="0" step="1" class="form-control" required="required" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-10">
                <label class="control-label col-md-2" for="partIds">ID/s of parts</label>
                <input id="partIds" name="partIds" type="text" class="form-control" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </form>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
