@model IEnumerable<CarDealer.Models.ViewModels.Cars.AllCarsByMakeVm>

@{
    ViewBag.Title = "All Cars";
}

<h2>All</h2>

<h4>Cars</h4>

<a class="btn btn-primary" href="/cars/add/">Add</a>
<br>

<table class="table table-striped">
    <tr>
        <th>Make</th>
        <th>Model</th>
        <th>TravelledDistance</th>
        <th></th>
    </tr>
    @foreach (var item in Model) {
    <tr>
        <td>@item.Make</td>
        <td>@item.Model</td>
        <td>@item.TravelledDistance km</td>
        <td>
            <a href="/cars/@item.Id/parts">Parts</a>
        </td>
    </tr>
}
</table>
