@model CarDealer.Models.BindingModels.Users.RegUserBm

@{
    ViewBag.Title = "Register User";
}

<h2>Register</h2>
<h4>User</h4>

<hr />

<div class="form-horizontal">
    <form method="POST">
        <div class="form-group">
            <div class="col-md-10">
                <label class="control-label col-md-2" for="username">Username</label>
                <input id="username" name="username" type="text" class="form-control" required="required" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-10">
                <label for="email" class="control-label col-md-2">Email</label>
                <input id="email" class="form-control" type="email" name="email" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-10">
                <label class="control-label col-md-2" for="password">Password</label>
                <input type="password" id="password" class="form-control" name="password" required="required" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-10">
                <label class="control-label col-md-2" for="confirmPassword">Confirm Password</label>
                <input type="password" id="confirmPassword" class="form-control" name="confirmPassword" required="required" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </form>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
