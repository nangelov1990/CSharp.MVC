@model IEnumerable<CarDealer.Models.ViewModels.Parts.AllPartVm>

@{
    ViewBag.Title = "All Parts";
}

<h2>All</h2>

<h4>Parts</h4>

<a class="btn btn-primary" href="/parts/add">Add</a>
<br>

<table class="table">
    <tr>
        <th>Name</th>
        <th>Price</th>
        <th>Quantity</th>
        <th>Supplier</th>
        <th></th>
    </tr>
    @foreach (var item in Model) {
        <tr>
            <td>@item.Name</td>
            <td>$ @item.Price</td>
            <td>@item.Quantity</td>
            <td>@item.SupplierName</td>
            <td>
                <a href="/parts/edit/@item.Id">Edit</a>
                <a href="/parts/delete/@item.Id">Delete</a>
            </td>
        </tr>
    }
</table>