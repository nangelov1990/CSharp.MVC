@model CarDealer.Models.ViewModels.Parts.EditPartVm

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>
<h4>Part</h4>

<hr />

<div class="form-horizontal">
    <form method="POST">
        <div class="form-group">
            <div class="col-md-10">
                <label for="name" class="control-label col-md-2">Name: </label>
                <input id="name" type="text" class="form-control" name="name" value="@Model.Name" readonly="readonly" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-10">
                <label class="control-label col-md-2" for="price">Price: </label>
                <input id="price" type="number" name="price" value="@Model.Price" class="form-control" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-10">
                <label class="control-label col-md-2" for="quantity">Quantity: </label>
                <input id="quantity" type="number" name="quantity" class="form-control" value="@Model.Quantity" min="1" pattern="\d*" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-10">
                <label class="control-label col-md-2" for="supplierName">Supplier: </label>
                <input id="supplierName" type="text" name="supplierName" class="form-control" value="@Model.SupplierName" readonly="readonly" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Edit" class="btn btn-default" />
            </div>
        </div>
    </form>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
