@model Dashboard.Models.ViewModels.Request.EditRequestViewModel
@{
    ViewBag.Title = "Request";
}

<h3>Request Details</h3>

<div class="form-horizontal">
    @Html.AntiForgeryToken()
    <hr />
    @Html.ValidationSummary("", new { @class = "text-danger" })
    @Html.HiddenFor(m => m.Id)
    <div class="form-group">
        <div class="col-md-7">
            <div class="form-group">
                @Html.LabelFor(m => m.Name, new { @class = "col-md-2 control-label" })
                <div>
                    @Html.TextBoxFor(m => m.Name, new { @class = "form-control", @readonly = "readonly" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Message, new { @class = "col-md-2 control-label" })
                <div>
                    @Html.TextAreaFor(m => m.Message, 3, 20, new { @class = "form-control", @readonly = "readonly" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Customer, new { @class = "col-md-2 control-label" })
                <div>
                    @Html.TextBoxFor(m => m.Customer.CompanyName, new { @class = "form-control", @readonly = "readonly" })
                </div>
            </div>
            <hr />
            <div class="form-group">
                @Html.LabelFor(m => m.Step, new { @class = "col-md-2 control-label" })
                <div>
                    @Html.TextBoxFor(m => m.Step, new { @class = "form-control", @readonly = "readonly" })
                </div>
            </div>
        </div>
        <div class="col-md-5">
            <div class="row center-block">
                <span class="btn btn-primary">
                    @Html.DisplayNameFor(m => m.Distributor)
                    <span class="badge">
                        @Html.DisplayFor(m => m.Distributor.ApplicationUser.Name)
                    </span>
                </span>
            </div>
            <hr />
            <div class="row center-block">
                <span class="btn btn-primary">
                    @Html.DisplayNameFor(m => m.Owner)
                    <span class="badge">
                        @Html.DisplayFor(m => m.Owner.ApplicationUser.Name)
                    </span>
                </span>
            </div>
            <hr />
            <div class="row center-block">
                <span class="btn btn-primary">
                    @Html.DisplayNameFor(m => m.CreatedTime)
                    <span class="badge">
                        @Html.DisplayFor(m => m.CreatedTime)
                    </span>
                </span>
            </div>
            <hr />
            <div class="row center-block">
                <span class="btn btn-primary">
                    @Html.DisplayNameFor(m => m.Type)
                    <span class="badge">
                        @Html.DisplayFor(m => m.Type)
                    </span>
                </span>
                <span class="btn btn-primary">
                    @Html.DisplayNameFor(m => m.Status)
                    <span class="badge">
                        @Html.DisplayFor(m => m.Status)
                    </span>
                </span>
            </div>
            <hr />
            <div class="request-buttons">
                @Html.Action("LoadNextStepButton", "Requests", new { area = "Employee" })
                @Html.Action("LoadAcceptButton", "Requests", new { area = "Employee" })
            </div>
        </div>
    </div>
</div>